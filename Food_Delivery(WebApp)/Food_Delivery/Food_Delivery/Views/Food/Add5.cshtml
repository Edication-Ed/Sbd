@model List<Dish>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] "Job Page"</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Food_Delivery.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="row align-items-center justify-content-center">
        <form class="col-2 text-center" method="post">
            <label>№ Чека:</label><br />
            <input type="text" name="CH" /><br />
            <label>Выберите наименование:</label>
            <select name="NM">
            <option disabled selected value="Наименование">Наименование</option>
            @foreach (var c in Model)
            {
                <option value="@c.IdDish">@c.DishName</option>
            }
            </select>
            <label>Количество:</label><br />
            <input type="text" name="KL" /><br /><br />

            <button type="submit" class="btn btn-primary btn-lg" asp-area="" asp-controller="Food" asp-action="Add5">Добавить</button>
        </form>
        <div class="col-2"><img src="~/img/Shest.png" /></div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
