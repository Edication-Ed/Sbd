@model List<Dish>
@{
    int cusId = (int)ViewData["additionalId"];
    var dish_quantity = (Dictionary<int, int>)ViewData["dish_quantity"];
    int quant;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] "Job Page"</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Food_Delivery.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="row row-cols-1 row-cols-md-3 g-4">
       @foreach (var c in Model){
           <div class="col">
            <div class="card text-center box-with-shadow">
                    <div class="text-center">
                        <img src="~/img/foods/@c.Foto" class="card-img-top" alt="..." style="width: 200px; height: 160px;">
                    </div>
                <div class="card-body">
                    <h5 class="card-title">@c.DishName</h5>
                    <p class="card-text">Цена: @c.DishCost руб.</p>
                        <form method="post">
                            @{
                                try{
                                quant = dish_quantity[c.IdDish];
                                } catch {quant = 0;}
                            }
                            @if(quant > 0){
                                <input class="btn btn-primary btn-lg" asp-controller="User" asp-action="Sub" asp-route-id="@c.IdDish" type="submit" value="&#45;" />
                            } else {
                                <input class="btn btn-primary btn-lg" type="submit" value="&#45;" disabled />
                            }
                            <span class="ms-3 me-3 fs-4"> @quant </span>
                            <input class="btn btn-primary btn-lg" asp-controller="User" asp-action="Add" asp-route-id="@c.IdDish" type="submit" value="&#43;" />
                        </form>
                </div>
            </div>
           </div>
       } 
    </div>
    <div class="d-flex justify-content-center align-items-center pt-4">
        <button class="btn btn-primary btn-lg"><a class="text-decoration-none text-white" asp-controller="User" asp-action="MyOrder" asp-route-id="@cusId">Мои заказы</a></button>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


